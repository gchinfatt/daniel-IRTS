@model DanielIncidentReporting.Models.Program
@{
    ViewBag.Title = "Manage Programs";
}

<h2>Manage Programs</h2>

<br/><br />
<!-- Delete Program -->
<div class="form-group">
    @Html.LabelFor(model => model.Prg_ID, htmlAttributes: new {@class = "control-label col-md-2"})
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.Prg_ID, (SelectList)ViewBag.programs)
        @Html.ValidationMessageFor(model => model.Prg_ID, "", new {@class = "text-danger"})
        @Html.ActionLink("  Delete Program", "DeleteProgram")
    </div>
</div>



<br/><hr/><br/>

<!-- Add Program-->
<div class="form-group">
    @Html.LabelFor(model => model.Prg_Name, htmlAttributes: new {@class = "control-label col-md-2"})
    <div class="col-md-10">
        @Html.EditorFor(model => model.Prg_Name, new {htmlAttributes = new {@class = "form-control"}})
        @Html.ValidationMessageFor(model => model.Prg_Name, "", new {@class = "text-danger"})
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Program" class="btn btn-default" />
        </div>
    </div>
</div>


